<!DOCTYPE html>
<html>
<head>
  <title>OnlineShop</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<header>
	<h1><%= link_to 'OnlineShop', :root %></h1>
	<div class="login">
		<% if current_user %>
		<%= link_to session[:user_name]+" "+ session[:user_lastname], edit_user_path(session[:user_id]) %> |
		<%= link_to 'Logout', session_path(current_user), :method => :delete %>
		<% else %>
		<%= link_to 'Login', new_session_path %> | <%= link_to 'Sign up', new_user_path %>
		<% end %>
	</div>
</header>

<div class="container">
<p id="notice"><%= notice %></p>
<% if error %>
<p class="error"><%= error %></p>
<% end %>

<%= yield %>

</div>
</body>
</html>
