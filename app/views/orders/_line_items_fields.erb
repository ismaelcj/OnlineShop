<div class="item_row" id="line_item">
  <div>
    <%= f.label :product %>
    <%= f.collection_select :product_id, Product.all, :id, :name, {prompt: "Select one"} %>
  </div>

  <div>
    <%= f.label :quantity %>
    <%= f.number_field :quantity, min: 1, max: 50 %>
  </div>

  <div>
    <%= f.label :price, 'Price' %>
    <%= f.number_field :price %>
  </div>

  <%= f.hidden_field :id %>
	<%= f.hidden_field :_destroy %> 

  <button type="button" name="remove_row" onclick="removeRow(event);">Delete</button>
</div>